<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="model">
	<class name="Transaction" table="transactions">
		<id name="transactionId" column="id">
			<generator class="native"></generator>
		</id>
		<property name="bookISBN" column="ISBN"></property>
		<property name="dateOfTransaction"
			column="date_of_transaction"></property>
		<property name="noOfCopies" column="number_of_copies"></property>
	</class>

</hibernate-mapping>